<h1>Check out the premier companies that recruit at Duke...</h1>
<br/>

<p><%= link_to "Back to events", events_path %></p>
<% @companies.each do |company| %>
	<div class="hero-unit">

	<h1 class="lead"><%= company.name %></h1>
	<br/>
	<h3><%= link_to(image_tag(company.logo, size: "150", class: "media"), company_path(company)) %></h3>
	<br/>
	<blockquote>
		<p><%= company.description %></p>
		<p>Learn more: <%= link_to company.website, company.website %></p>
	</blockquote>
	</div>
<% end %>




