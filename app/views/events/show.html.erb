<div class="hero-unit">
	<h1 class="lead"><%= @event.title %></h1>
	<h3 class="lead">Hosted by <%= @company.name %></h3>
	<h4 class="lead text-warning"><%= @event.location %></h4>
	<div><%= image_tag @company.logo, size: "125" %></div>
	<br/>
	<p>Learn more: <%= link_to @company.website, @company.website %></p>
</div>

<ul class="nav nav-list">
  <li class="divider"></li>
</ul>
<br/>

<%= form_for [@event, @comment] do |f| %>
  <p>
    <%= f.text_area :post, placeholder: "Add a comment..." %>
  </p>
  <%= f.submit %>
<% end %>

<ul class="comments">
  <% @event.comments.each do |comment| %>
    <li><%= "#{comment.user.name} posted: #{comment.post}" %></li>
  <% end %>
</ul>

<br/>
<p><%= link_to "Back to home page", root_path %></p>

