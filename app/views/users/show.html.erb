<% if notice %>
	<p class="alert alert-success" id="notice"><%= notice %></p>
<%end%>

<div class="container">
	<div class="row">
		<div class="span8">
			<h2>Account</h2>
			<table class="table table-striped">
				<thead>
					<tr><th colspan="2">Basic Information</th></tr>
				</thead>
				<tbody>
					<tr><td>Name:</td><td><%=@user.name%></td></tr>
					<tr><td>Email:</td><td><%=@user.email%></td></tr>
					<tr><td>Linked Accounts:</td>
						<% auth_array = [] %>
						<% @user.authentications.each do |auth| %></td>
							<% auth_array << auth.provider.capitalize %>
						<% end %>
						<% if auth_array.empty? %>
							<td>None yet... link them <%= link_to "here!", edit_user_registration_path %></td>
						<% else %>
							<td><%= auth_array.join(", ") %></td>
						<% end %>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
</div>