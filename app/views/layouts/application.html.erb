<!DOCTYPE html>
<html lang="en">
  <%= render partial: 'layouts/header' %>
  <body>
    <%= render partial: 'layouts/navbar' %>
    
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <%= render 'layouts/footer' %>
    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
