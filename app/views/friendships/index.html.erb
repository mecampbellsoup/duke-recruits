<div class="container">
	<div class="page-header">
		<h1>Friendships<br><small>View &amp Add Friends</small></h1>
	</div>
	<div class="row-fluid">
		<div class="span5">
		<% for friend in @friends %>
	    <p>
			<strong><%= friend.name %></strong>
			<%= image_tag avatar_url(friend), size: "100x100" %>
			<%= link_to "Add Friend", friendships_path(:friend_id => friend), :method => :post %>
			<div class="clear"></div>
	    </p>
	 	<% end %>
		</div>
	</div>
</div>